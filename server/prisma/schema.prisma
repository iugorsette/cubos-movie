datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  filmes    Filme[]
  createdAt DateTime @default(now())
}

model Filme {
  id                      String   @id @default(uuid())
  titulo                  String
  tituloOriginal          String?
  subtitulo               String?
  sinopse                 String?
  dataLancamento          DateTime
  duracao                 Float?
  popularidade            Float?
  votos                   Int?
  idioma                  String?
  orcamento               Float?
  receita                 Float?
  lucro                   Float?
  generos                 String[]
  capaUrl                 String?
  capaFundo               String?
  trailerUrl              String?
  classificacaoIndicativa String?
  createdBy               String
  user                    User     @relation(fields: [createdBy], references: [id])
  createdAt               DateTime @default(now())
}
